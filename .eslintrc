# Support ES2016 features
parser: babel-eslint

extends: standard
env:
  mocha: true
rules:
  eqeqeq: 0
  no-var: 0
  semi: [2, always]
  space-before-function-paren: [2, never]
  yoda: 0
  arrow-parens: [2, "as-needed"]
  arrow-spacing: 2
  dot-location: [2, "property"]
  prefer-arrow-callback: 2
globals:
  __PORT__: true
  __DEV_MODE__: true
